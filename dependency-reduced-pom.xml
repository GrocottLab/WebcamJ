<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>31.1.0</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.grocottlab</groupId>
  <artifactId>Webcam_J</artifactId>
  <name>WebcamJ</name>
  <version>0.1.0-SNAPSHOT</version>
  <description>Webcam plugin for ImageJ and Fiji</description>
  <url>https://mycompany.com/imagej/process-pixels/</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/grocottlab/WebcamJ</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2023</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Image.sc Forum</name>
      <archive>https://forum.image.sc/tag/imagej</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>GrocottLab</id>
      <name>Timothy Grocott</name>
      <url>https://grocottlab.com/</url>
      <roles>
        <role>founder</role>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>None</name>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>GNU General Public License (GPL), Version 3.0</name>
      <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/grocottlab/WebcamJ</connection>
    <developerConnection>scm:git:git@github.com:grocottlab/WebcamJ</developerConnection>
    <url>https://github.com/grocottlab/WebcamJ</url>
  </scm>
  <organization>
    <name>Grocott Lab</name>
    <url>https://grocottlab.com/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>net.imagej:*</exclude>
                  <exclude>org.bytedeco:opencv:jar:android*</exclude>
                  <exclude>org.bytedeco:opencv:jar:ios*</exclude>
                  <exclude>org.bytedeco:openblas:jar:android*</exclude>
                  <exclude>org.bytedeco:openblas:jar:ios*</exclude>
                  <exclude>org.bytedeco:javacpp:jar:android*</exclude>
                  <exclude>org.bytedeco:javacpp:jar:ios*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>analyze</id>
            <goals>
              <goal>analyze</goal>
            </goals>
            <configuration>
              <ignoreNonCompile>true</ignoreNonCompile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>copytoplugins</id>
            <phase>install</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <copy />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>net.imagej</groupId>
      <artifactId>ij</artifactId>
      <version>1.53f</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>tools</artifactId>
          <groupId>com.sun</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <reporting />
  <properties>
    <license.copyrightOwners>Timothy Grocott</license.copyrightOwners>
    <license.licenseName>GNU General Public License (GPL), Version 3.0</license.licenseName>
    <package-name>com.grocottlab</package-name>
    <main-class>com.grocottlab.WebcamJ</main-class>
  </properties>
</project>
